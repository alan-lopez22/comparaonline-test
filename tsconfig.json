{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "./src",
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "spec/**/*.spect.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}